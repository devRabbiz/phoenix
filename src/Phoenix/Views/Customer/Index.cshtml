@model IEnumerable<Phoenix.Domain.Customer>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Customers</h1>    
</div>

<div>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Street Address 1</th>
            <th scope="col">Street Address 2</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip Code</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(c => customer.Id)</th>
                <td>@Html.DisplayFor(c => customer.Name)</td>
                <td>@Html.DisplayFor(c => customer.StreetLine1)</td>
                <td>@Html.DisplayFor(c => customer.StreetLine2)</td>
                <td>@Html.DisplayFor(c => customer.City)</td>
                <td>@Html.DisplayFor(c => customer.State)</td>
                <td>@Html.DisplayFor(c => customer.ZipCode)</td>
                <td>@Html.ActionLink("Delete", "Delete", "Customer", new { customer.Id })</td>
            </tr>   
        }
    </tbody>
    </table>
</div>
<a asp-action="Add" asp-controller="Customer">Add Customer</a>