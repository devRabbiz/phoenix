@model Phoenix.Features.Suppliers.SupplierViewModel

@{
    ViewData["Title"] = "New Supplier";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">New Supplier</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Post" asp-controller="Suppliers">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine1"></label>
                <input asp-for="AddressLine1" class="form-control" placeholder="Enter Street Address" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine2"></label>
                <input asp-for="AddressLine2" class="form-control" placeholder="Enter Street Address" /> 
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter City" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" placeholder="Enter State" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" class="form-control" placeholder="Enter Zip Code" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-6">
    </div>
</div>
