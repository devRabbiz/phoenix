@model IEnumerable<Phoenix.Domain.Orders.Order>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="row">
        <div class="col-md-6">
            <h1>Orders</h1>
        </div>
        <div class="col-md-6">
            <a asp-action="Add" asp-controller="Orders" class="btn btn-primary">Add Orders</a>
        </div>
    </div>
</div>

<div>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Supplier</th>            
            <th scope="col">Customer</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(c => order.Id)</th>
                <td>@Html.DisplayFor(c => order.Supplier.Name)</td>                
                <td>@Html.DisplayFor(c => order.Customer.Name)</td>                
                <td>@Html.ActionLink("Delete", "Delete", "Customer", new { order.Id })</td>
            </tr>   
        }
    </tbody>
    </table>
</div>
