@model Phoenix.Domain.Customers.CustomerModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Add Customer</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Post" asp-controller="Customers">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter Phone Number" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Fax"></label>
                    <input asp-for="Fax" class="form-control" placeholder="Enter Fax Number" />
                </div>
            </div>            
            <div class="form-group">
                <label asp-for="AddressLine1"></label>
                <input asp-for="AddressLine1" class="form-control" placeholder="Enter Street Address" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine2"></label>
                <input asp-for="AddressLine2" class="form-control" placeholder="Enter Street Address" /> 
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter City" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Province"></label>
                    <input asp-for="Province" class="form-control" placeholder="Enter State" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="Enter Zip Code" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-6">
    </div>
</div>
